<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Public/css/app/Site.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Public/js/app/jquery-1.9.1.js")"></script>
    <script src="@Url.Content("~/Public/js/app/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Public/css/app/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Public/css/app/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Public/css/views/Home.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <div class="nav navbar-default navbar-fixed-top" id="navBar">
            <a class="navbar-brand" href="~/Home/Index">
                <img src="~/Public/images/music_heart.gif" id="music_heart" alt="Beating Heart" />
            </a>
            <ul class="nav navbar-nav" id="navegacao">
                <li><a href="#">Playlist Semanal</a></li>
                <li><a href="#">Novidades</a></li>
                <li><a href="#">Tutoriais</a></li>
            </ul>
            <ul class="nav navbar-nav pull-right">
                <li><a href="~/Home/Profile">Login</a></li>
                <li class="dropdown clearfix">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Sign Up</a>
                    <div class="dropdown-menu" style="padding:17px;">
                        <form id="formLogin" class="form">
                            <label>Login</label><br />
                            <input type="text" name="username" placeholder="Username" title="Enter your username" required /><br />
                            <input type="password" id="password" name="password" placeholder="Passoword" title="Enter your password" required/>
                            <br /><br />
                            <button type="button" id="btnLogin" class="btn">Login</button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
        <section class="modal fade" id="cadastro" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dissmiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Registrar-se</h4>
                    </div>
                    <div class="modal-body">
                        <label for="email">E-Mail:</label>
                        <input type="email" name="email" /><br />

                        <label for="nome">Nome:</label>
                        <input type="text" name="nome" /><br />

                        <label for="telefone">Telefone:</label>
                        <input type="tel" name="telefone" /><br />

                        <label for="genero">Gênero:</label>
                        <input type="radio" name="sexo" value="Masculino" />Masculino
                        <input type="radio" name="sexo" value="Feminino" />Feminino
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                        <button type="button" class="btn btn-default" data-dissmiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </section>
    </header>
    @RenderBody()
    <footer></footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>